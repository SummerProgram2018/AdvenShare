<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="130dp"
        android:layout_height="146dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@+id/imageButton5"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/weather" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="131dp"
        android:layout_height="152dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_below="@+id/imageButton5"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/transport" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="133dp"
        android:layout_height="149dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_marginEnd="48dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/accommodation" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="131dp"
        android:layout_height="158dp"
        android:layout_alignStart="@+id/imageButton"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/currency" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="131dp"
        android:layout_height="160dp"
        android:layout_alignEnd="@+id/imageButton3"
        android:layout_centerVertical="true"
        android:layout_marginEnd="1dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/tours" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="134dp"
        android:layout_height="154dp"
        android:layout_below="@+id/imageButton4"
        android:layout_toEndOf="@+id/imageButton"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/change" />

</RelativeLayout>